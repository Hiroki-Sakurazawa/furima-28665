<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("furima-logo-color.png", class:"furima-icon"), "/" %>
    <%= form_with(url: search_items_path, local: true, method: :get, class: "search-form") do |form| %>
      <%= form.text_field :keyword, placeholder: "商品名から探す", class: "input-box" %>
      <button class="search-button">
      <%= image_submit_tag "search.png", class:"search-icon" %>
      </button>
    <%end%>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list", id: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.nickname, "#", class: "user-nickname" %></li>
      <li><%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %></li>
      <% else %>
      <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
      <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
  <ul class="show-lists hidden" id="pull-down">
  <li id="lady"><%= link_to '&nbsp;レディース'.html_safe, lady_items_path, class: "brand-list" %></li>
  <li id="man"><%= link_to '&nbsp;メンズ'.html_safe, man_items_path, class: "brand-list" %></li>
  <li id="baby"><%= link_to '&nbsp;ベビー・キッズ'.html_safe, baby_items_path, class: "brand-list" %></li>
  <li id="interior"><%= link_to '&nbsp;インテリア・住まい・小物'.html_safe, interior_items_path, class: "brand-list" %></li>
  <li id="book"><%= link_to '&nbsp;本・音楽・ゲーム'.html_safe, book_items_path, class: "brand-list" %></li>
  <li id="toy"><%= link_to '&nbsp;おもちゃ・ホビー・グッズ'.html_safe, toy_items_path, class: "brand-list" %></li>
  <li id="camera"><%= link_to '&nbsp;家電・スマホ・カメラ'.html_safe, camera_items_path, class: "brand-list" %></li>
  <li id="sport"><%= link_to '&nbsp;スポーツ・レジャー'.html_safe, sport_items_path, class: "brand-list" %></li>
  <li id="handmade"><%= link_to '&nbsp;ハンドメイド'.html_safe, handmade_items_path, class: "brand-list" %></li>
  <li id="other"><%= link_to '&nbsp;その他'.html_safe, other_items_path, class: "brand-list" %></li>
  </ul>
</header>